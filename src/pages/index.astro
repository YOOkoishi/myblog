---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
---

<BaseLayout title="Home">
  <MainCard
    title="Welcome to My Blog"
    description="YOO's blog"
    textOverlay="HOME"
    infoIcon="lucide:info"
  >
    <div class="space-y-8">
      <!-- Hero Section -->
      <section class="py-6">
        <div class="flex flex-col items-center text-center">
          <h1 class="text-4xl font-bold mb-4 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
            ✨ YOO_koishi's blog
          </h1>
          <p class="text-xl text-base-content/80 max-w-3xl mb-8">
            Welcome to my blog! I'm a student who loves to explore the world of programming and technology. This blog is a place where I share my thoughts, ideas, and projects. I hope you find something interesting here!           
          </p>
        </div>
      </section>
      
      <!-- 访问统计 -->
      <section class="py-6">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:eye" class="w-6 h-6 text-primary" />
          <span>访问统计</span>
        </h2>
        <div class="flex justify-center">
          <img 
            src="https://count.getloli.com/@:mainpageblog?name=%3Amainpageblog&theme=capoo-2&padding=8&offset=0&align=top&scale=1&pixelated=1&darkmode=auto" 
            alt="访问计数器"
            class="rounded-lg shadow-sm"
          />
        </div>
      </section>
    </div>
  </MainCard>
</BaseLayout>
